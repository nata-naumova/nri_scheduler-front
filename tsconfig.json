{
	"compilerOptions": {
		"target": "ES2022",
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ES2022"
		],

		"moduleResolution": "bundler",
		"useDefineForClassFields": true,

		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,

		"jsx": "react-jsx",
		"jsxImportSource": "preact",

		"noEmit": true
	},
	"include": ["src"],
}
